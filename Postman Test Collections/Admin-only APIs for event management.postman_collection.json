	"item": [
		{
			"name": "Valid Admin Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response status code is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response includes a JWT token\", () => {\r",
							"  const response = pm.response.json();\r",
							"  pm.expect(response).to.have.property(\"token\").that.is.a(\"string\");\r",
							"\r",
							"  // Save the token for future authenticated requests\r",
							"  pm.globals.set(\"admin_auth_token\", response.token);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{ \r\n  \"email\": \"admin_test1@example.com\", \r\n  \"password\": \"admin123\" \r\n} ",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/auth/login",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Valid event creation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Check status code\r",
							"pm.test(\"Status: 201 Created\", () => pm.response.to.have.status(201));\r",
							"\r",
							"// Validate response structure\r",
							"pm.test(\"Response includes event details\", () => {\r",
							"    const response = pm.response.json();\r",
							"    const requestBody = JSON.parse(pm.request.body.raw);\r",
							"    pm.expect(response).to.have.property(\"id\");\r",
							"    pm.expect(response).to.have.property(\"name\");\r",
							"    pm.expect(response).to.have.property(\"description\");\r",
							"    pm.expect(response).to.have.property(\"date\");\r",
							"    console.log(pm.request.body.raw[\"name\"])\r",
							"    pm.expect(response.name).to.eql(requestBody.name);\r",
							"    pm.expect(response.description).to.eql(requestBody.description);\r",
							"});\r",
							"\r",
							"pm.globals.set(\"event_id\", pm.response.json().id);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{admin_auth_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{ \r\n  \"name\": \"Art Exhibition\", \r\n  \"description\": \"An exhibition of contemporary art pieces.\", \r\n  \"date\": \"2025-01-10\" \r\n} ",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/events",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"events"
					]
				}
			},
			"response": []
		},
