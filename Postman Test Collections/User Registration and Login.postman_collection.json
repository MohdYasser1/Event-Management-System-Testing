		{
			"name": "New Request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"\r",
							"// Check status code\r",
							"pm.test(\"Status: 200 OK\", () => pm.response.to.have.status(200));\r",
							"\r",
							"// Parse response and stored user data\r",
							"const profile = pm.response.json();\r",
							"const loggedInEmail = pm.globals.get(\"user_email\");\r",
							"\r",
							"// Validate response structure using individual property checks\r",
							"pm.test(\"Profile has required fields\", () => {\r",
							"  pm.expect(profile).to.have.property(\"id\");\r",
							"  pm.expect(profile).to.have.property(\"username\");\r",
							"  pm.expect(profile).to.have.property(\"email\");\r",
							"  pm.expect(profile).to.have.property(\"isAdmin\");\r",
							"  \r",
							"  // Type checks\r",
							"  pm.expect(profile.id).to.be.a(\"number\");\r",
							"  pm.expect(profile.username).to.be.a(\"string\");\r",
							"  pm.expect(profile.email).to.be.a(\"string\").and.to.include(\"@\");\r",
							"  pm.expect(profile.isAdmin).to.be.a(\"boolean\");\r",
							"});\r",
							"\r",
							"// Validate email matches logged-in user\r",
							"pm.test(\"Email matches logged-in user\", () => {\r",
							"  pm.expect(profile.email).to.eql(loggedInEmail);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
