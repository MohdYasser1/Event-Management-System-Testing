		{
			"name": "Valid RSVP",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Check status code\r",
							"pm.test(\"Status: 200 OK\", () => pm.response.to.have.status(200));\r",
							"\r",
							"// Validate response structure\r",
							"pm.test(\"RSVP has confirmation message\", () => {\r",
							"  const response = pm.response.json();\r",
							"  pm.expect(response).to.have.property(\"message\", \"RSVP confirmed for event.\");\r",
							"});\r",
							"pm.test(\"RSVP confirmed with correct eventId\", () => {\r",
							"  const response = pm.response.json();\r",
							"  pm.expect(response.eventId).to.eql(pm.environment.get(\"eventId\"));\r",
							"});\r",
							"\r",
							"pm.test(\"RSVP confirmed with correct eventId\", () => {\r",
							"  const response = pm.response.json();\r",
							"  const expectedEventId = pm.globals.get(\"event_id\"); // Get stored event ID\r",
							"  \r",
							"  // Validate the response matches the stored event ID\r",
							"  pm.expect(Number(response.event_id)).to.eql(expectedEventId);\r",
							"  \r",
							"  // Store the event ID from the RSVP response (optional, if needed elsewhere)\r",
							"  pm.globals.set(\"rsvpEventId\", response.event_id);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{auth_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
