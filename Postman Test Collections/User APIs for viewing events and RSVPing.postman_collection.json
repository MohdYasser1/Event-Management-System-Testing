		{
			"name": "Valid get all events",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Check status code\r",
							"pm.test(\"Status: 200 OK\", () => pm.response.to.have.status(200));\r",
							"\r",
							"// Validate response is an array\r",
							"pm.test(\"Response is an array of events\", () => {\r",
							"  const response = pm.response.json();\r",
							"  pm.expect(response).to.be.an(\"array\");\r",
							"});\r",
							"\r",
							"// Validate each event's structure\r",
							"pm.test(\"All events have required fields\", () => {\r",
							"  const events = pm.response.json();\r",
							"  events.forEach(event => {\r",
							"    pm.expect(event).to.have.property(\"id\");\r",
							"    pm.expect(event).to.have.property(\"name\");\r",
							"    pm.expect(event).to.have.property(\"description\");\r",
							"    pm.expect(event).to.have.property(\"date\");\r",
							"    pm.expect(event.id).to.be.a(\"number\");\r",
							"    pm.expect(event.name).to.be.a(\"string\");\r",
							"    pm.expect(event.description).to.be.a(\"string\");\r",
							"    pm.expect(event.date).to.match(/^\\d{4}-\\d{2}-\\d{2}$/); // Validate date format\r",
							"  });\r",
							"});\r",
							"\r",
							"// Save the first event's ID (if events exist)\r",
							"const events = pm.response.json();\r",
							"\r",
							"pm.test(\"At least one event exists\", () => {\r",
							"  pm.expect(events).to.be.an(\"array\").that.is.not.empty;\r",
							"});\r",
							"\r",
							"if (events.length > 0) {\r",
							"  pm.globals.set(\"eventId\", events[0].id);\r",
							"  pm.test(\"Event ID saved\", () => pm.expect(pm.globals.get(\"eventId\")).to.exist);\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
